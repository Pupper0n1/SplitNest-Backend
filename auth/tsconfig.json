{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Enable ECMAScript Modules (ESM)
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types/express/index.d.ts"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
