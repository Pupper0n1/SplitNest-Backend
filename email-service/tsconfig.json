{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",  // Enable ECMAScript Modules (ESM)
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
